<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:orientation="vertical" >

    <!-- //////////////////// -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_btn1"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_game"
            android:gravity="center"
           
            android:orientation="vertical" >
<!--  android:background="#7BB02A" -->

            <ImageView
                android:id="@+id/iv_"
                android:layout_width="116dp"
                android:layout_height="68dp"
                android:scaleType="fitCenter"
                android:src="@drawable/text_bg" />

            <TextView
                android:id="@+id/tv_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="别踩白块"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn2"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:background="@drawable/bg_game"
            
            android:gravity="center"
      
            android:orientation="vertical" >
<!-- android:background="#5544ff" -->
          <ImageView
                android:layout_width="116dp"
                android:layout_height="68dp"
                android:scaleType="fitCenter"
                android:src="@drawable/text_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2048"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
    <!-- ///////////////// -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_btn3"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:background="@drawable/bg_game"
            android:layout_marginRight="4dp"
            android:layout_weight="1"

            android:gravity="center"
       
            android:orientation="vertical" >
               <!--  android:id="@+id/iv_" -->
   <!--      android:background="#5544ff"
            android:background="#FF7908" -->

            <ImageView
                android:layout_width="118dp"
                android:layout_height="68dp"
                android:scaleType="fitCenter"
                android:src="@drawable/text_bg" />

<!--  android:id="@+id/tv_" -->
            <TextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数独"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn4"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_weight="1"
          
            android:background="@drawable/bg_game"
            android:gravity="center"
           
            android:orientation="vertical" >
<!--   android:background="#0C8918" -->

            <ImageView
                android:layout_width="118dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/text_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hao321"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
    <!--  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >
    </LinearLayout>
    <!--  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>